        {
            "label": "Run Tests",
            "type": "shell",
            "command": "mvn",
            "args": [
                "test"
            ],
            "group": {
                "kind": "test"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
